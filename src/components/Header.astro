---
const { avatarURL, title, desc } = Astro.props;
---

<header class="flex justify-center flex-col items-center text-center py-12">
  <div class="avatar">
    <div
      class="ring-primary ring-offset-base-100 w-24 md:32 rounded-full ring ring-offset-2"
    >
      <img src={avatarURL} />
    </div>
  </div>

  <div class="text-base-content mt-4">
    <h1 class="text-2xl font-bold">{title}</h1>
    <p class="text-sm">{desc}</p>
  </div>
</header>
